<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 h ago "
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_alignBaseline="@+id/tvHandle"
        android:layout_alignBottom="@+id/tvHandle"
        android:layout_toEndOf="@+id/tvHandle" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        app:srcCompat="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvScreenname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text="Twitter Name"
        android:textStyle="bold"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_alignStart="@+id/tvBody" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvScreenname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:paddingBottom="15dp"
        android:text="The actual body of the tweet goes here" />

    <TextView
        android:id="@+id/tvHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text="\@handle"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_alignBaseline="@+id/tvScreenname"
        android:layout_alignBottom="@+id/tvScreenname"
        android:layout_toEndOf="@+id/tvScreenname" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tvBody"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>